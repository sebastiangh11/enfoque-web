---
import Container from "./Container.astro";
import Button from "./Button.astro";

const whatsappUrl = import.meta.env.PUBLIC_WHATSAPP_URL ?? "https://wa.me/521XXXXXXXXXX";

const trustItems = [
  { label: "30+ años en impresión", icon: "calendar" },
  { label: "+500 proyectos entregados", icon: "projects" },
  { label: "Cobertura nacional (MX)", icon: "scale" },
];
---

<section class="hero relative overflow-hidden py-20 md:py-28 lg:py-32" aria-labelledby="hero-heading">
  <div class="hero-bg absolute inset-0 pointer-events-none" aria-hidden="true"></div>

  <Container class="relative">
    <div class="lg:grid lg:grid-cols-12 lg:gap-12 xl:gap-16 lg:items-center">
      <!-- Left: copy + CTAs + trust -->
      <div class="text-center lg:text-left lg:col-span-7">
        <h1
          id="hero-heading"
          class="text-4xl font-bold tracking-tight text-text-primary md:text-5xl lg:text-6xl"
        >
          Publicidad impresa para que tu marca se vea <span class="hero-headline-highlight">gigante.</span>
        </h1>
        <p class="mx-auto mt-6 max-w-xl text-lg text-text-secondary md:text-xl lg:mx-0">
          Diseñamos, producimos e instalamos materiales publicitarios premium para empresas.
        </p>

        <div class="mt-10 flex flex-col items-center gap-4 sm:flex-row lg:justify-start">
          <Button href="/#contacto" variant="primary" size="md">
            Cotizar proyecto
          </Button>
          <Button href="/#portafolio" variant="secondary" size="md">
            Ver portafolio
          </Button>
        </div>

        <p class="mt-4">
          <a
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-text-muted hover:text-text-secondary transition-colors focus:outline-none focus:ring-2 focus:ring-brand-orange focus:ring-offset-2 rounded"
            aria-label="Hablar por WhatsApp"
          >
            Hablar por WhatsApp →
          </a>
        </p>

        <!-- Trust indicators (pills) -->
        <div class="mt-12 flex flex-wrap items-center justify-center gap-3 lg:justify-start">
          {trustItems.map((item) => (
            <span
              class="inline-flex items-center gap-2 rounded-full border border-border bg-surface-soft px-4 py-2 text-sm text-text-secondary"
              role="listitem"
            >
              {item.icon === "calendar" && (
                <svg class="h-4 w-4 shrink-0 text-brand-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              )}
              {item.icon === "projects" && (
                <svg class="h-4 w-4 shrink-0 text-brand-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 7V9a2 2 0 002 2m0 0V5a2 2 0 112 2v0m-6 2a2 2 0 002 2h0a2 2 0 002-2m0 0V5a2 2 0 112 2v0m0 0a2 2 0 104 0m0-4v0a2 2 0 104 0m0-4v0a2 2 0 104 0" />
                </svg>
              )}
              {item.icon === "scale" && (
                <svg class="h-4 w-4 shrink-0 text-brand-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-3 9" />
                </svg>
              )}
              <span>{item.label}</span>
            </span>
          ))}
        </div>
      </div>

      <!-- Right: hero visual card -->
      <div class="mt-14 lg:mt-0 lg:col-span-5 flex justify-center lg:justify-end">
        <div class="hero-visual-card hero-visual-card-border w-full max-w-md">
          <div class="rounded-2xl border border-border bg-surface p-5 shadow-sm md:p-6">
            <!-- Abstract portfolio preview -->
            <div class="flex gap-2 mb-3">
              <div class="h-14 w-14 rounded-lg bg-surface-soft border border-border shrink-0" aria-hidden="true" />
              <div class="h-14 flex-1 rounded-lg bg-surface-soft border border-border" aria-hidden="true" />
              <div class="h-14 w-14 rounded-lg bg-surface-soft border border-border shrink-0" aria-hidden="true" />
            </div>
            <div
              class="aspect-[4/3] rounded-lg border border-border bg-gradient-to-br from-brand-blue/10 to-brand-orange/10 mb-4"
              aria-hidden="true"
            />
            <p class="text-xs text-text-muted font-medium">
              Stands • Señalización • Regalos corporativos
            </p>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>

<style>
  .hero-headline-highlight {
    background: linear-gradient(
      to bottom,
      transparent 58%,
      color-mix(in srgb, var(--brand-orange) 35%, transparent) 58%
    );
    padding-inline: 0.08em;
    border-radius: 2px;
  }

  .hero-bg {
    background:
      linear-gradient(
        135deg,
        color-mix(in srgb, var(--brand-blue) 8%, transparent) 0%,
        transparent 50%
      ),
      linear-gradient(
        225deg,
        color-mix(in srgb, var(--brand-orange) 5%, transparent) 0%,
        transparent 40%
      ),
      linear-gradient(
        90deg,
        color-mix(in srgb, var(--brand-blue) 3%, transparent) 1px,
        transparent 1px
      ),
      linear-gradient(
        color-mix(in srgb, var(--brand-blue) 3%, transparent) 1px,
        transparent 1px
      );
    background-size: 100% 100%, 100% 100%, 48px 48px, 48px 48px;
  }

  .hero-visual-card-border {
    padding: 1px;
    border-radius: 1rem;
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--brand-blue) 20%, transparent),
      color-mix(in srgb, var(--brand-orange) 15%, transparent)
    );
  }

  .hero-visual-card-border > div {
    border-radius: calc(1rem - 1px);
  }

  .hero-visual-card {
    opacity: 0;
    animation: hero-float-in 1s ease-out forwards;
  }

  @keyframes hero-float-in {
    from {
      opacity: 0;
      transform: translateY(16px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-visual-card {
      animation: none;
      opacity: 1;
    }
  }
</style>
