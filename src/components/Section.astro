---
interface Props {
  id?: string;
  ariaLabelledby?: string;
  class?: string;
  variant?: "default" | "soft";
}

const {
  id,
  ariaLabelledby,
  class: className = "",
  variant = "default",
} = Astro.props;

const bgClass = variant === "soft" ? "surface-card" : "";
---

<section
  id={id}
  class:list={["section-bg section-shell", bgClass, className]}
  aria-labelledby={ariaLabelledby}
>
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <slot name="eyebrow" />
    <slot name="title" />
    <slot name="description" />
    <slot />
  </div>
</section>
