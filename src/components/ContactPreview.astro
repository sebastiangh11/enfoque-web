---
import Container from "./Container.astro";

const whatsappBaseUrl = "https://wa.me/525574570826";
---

<section id="contacto" class="section-bg section-orange-blue relative overflow-hidden">
  <div class="section-glow absolute inset-0 [--section-orange-glow:10%] [--section-green-glow:8%]" aria-hidden="true"></div>
  <div class="section-grid section-grid-soft absolute inset-0 opacity-80" aria-hidden="true"></div>

  <Container class="section-panel relative py-10 md:py-12">
    <div class="grid gap-10 lg:grid-cols-[1.02fr_0.98fr] lg:items-start lg:gap-12">
      <div class="space-y-8">
        <div class="space-y-4">
          <h2 class="max-w-2xl text-3xl font-bold tracking-tight text-text-primary md:text-5xl">
            Producción de branding físico para empresas en México.
          </h2>
          <p class="max-w-2xl text-base leading-relaxed text-text-secondary md:text-lg">
            Atendemos corporativos, medianas empresas, PYMEs y retailers. Nos aventamos cualquier proyecto y entregamos
            propuestas claras para arrancar rápido.
          </p>
        </div>

        <ul class="grid gap-3 text-sm text-text-secondary sm:grid-cols-2">
          <li class="ui-interactive flex items-center gap-3 rounded-xl border border-border/80 bg-surface/85 px-4 py-3 backdrop-blur-sm">
            <span class="flex h-9 w-9 shrink-0 items-center justify-center rounded-full bg-brand-orange/10 text-brand-orange">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.9" d="M3 7h18M3 12h18M3 17h18" />
              </svg>
            </span>
            <span>Atendemos corporativos y PYMEs</span>
          </li>
          <li class="ui-interactive flex items-center gap-3 rounded-xl border border-border/80 bg-surface/85 px-4 py-3 backdrop-blur-sm">
            <span class="flex h-9 w-9 shrink-0 items-center justify-center rounded-full bg-brand-blue/10 text-brand-blue">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.9" d="M5 13l4 4L19 7" />
              </svg>
            </span>
            <span>Calidad premium</span>
          </li>
          <li class="ui-interactive flex items-center gap-3 rounded-xl border border-border/80 bg-surface/85 px-4 py-3 backdrop-blur-sm">
            <span class="flex h-9 w-9 shrink-0 items-center justify-center rounded-full bg-brand-orange/10 text-brand-orange">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.9" d="M13 5l7 7-7 7M4 12h16" />
              </svg>
            </span>
            <span>Producción rápida</span>
          </li>
          <li class="ui-interactive flex items-center gap-3 rounded-xl border border-border/80 bg-surface/85 px-4 py-3 backdrop-blur-sm">
            <span class="flex h-9 w-9 shrink-0 items-center justify-center rounded-full bg-brand-blue/10 text-brand-blue">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.9" d="M12 6v12m6-6H6" />
              </svg>
            </span>
            <span>Nos adaptamos a cualquier proyecto</span>
          </li>
        </ul>

        <div class="rounded-2xl border border-border bg-surface p-5 shadow-sm md:p-6">
          <p class="text-sm font-semibold text-text-primary">Contacto Directo</p>
          <div class="mt-4 flex flex-wrap gap-3">
            <a
              href="mailto:ventas@segac.com.mx"
              class="ui-interactive inline-flex items-center gap-2 rounded-xl border border-border bg-surface-soft px-4 py-2.5 text-sm font-semibold text-text-secondary hover:border-brand-blue hover:text-brand-blue"
            >
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M3 7l8.2 5.6a1.5 1.5 0 001.6 0L21 7M5 5h14a2 2 0 012 2v10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2z" />
              </svg>
              ventas@segac.com.mx
            </a>
            <a
              href={whatsappBaseUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="ui-interactive inline-flex items-center gap-2 rounded-xl border border-accent-green/40 bg-accent-green/5 px-4 py-2.5 text-sm font-semibold text-accent-green hover:border-accent-green hover:bg-accent-green/10"
            >
              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z" />
                <path d="M12.051 21.785h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884a9.86 9.86 0 019.881 9.892c-.003 5.45-4.437 9.884-9.885 9.884z" />
              </svg>
              WhatsApp
            </a>
          </div>
        </div>
      </div>

      <div class="rounded-2xl border border-border bg-surface p-6 shadow-sm md:p-8">
        <p class="text-sm font-semibold uppercase tracking-[0.2em] text-text-secondary">
          Cuéntanos de tu proyecto y te preparamos una propuesta.
        </p>

        <form class="mt-6 grid gap-4" aria-label="Formulario de cotización" data-contact-form>
          <label class="grid gap-2 text-sm font-semibold text-text-primary">
            Nombre
            <input
              type="text"
              name="nombre"
              required
              placeholder="Juan Perez"
              class="w-full rounded-xl border border-border bg-surface-soft px-4 py-3.5 text-base text-text-primary placeholder:text-text-muted focus:outline-none focus:ring-2 focus:ring-brand-orange"
            />
          </label>

          <label class="grid gap-2 text-sm font-semibold text-text-primary">
            Empresa
            <input
              type="text"
              name="empresa"
              placeholder="Apple"
              class="w-full rounded-xl border border-border bg-surface-soft px-4 py-3.5 text-base text-text-primary placeholder:text-text-muted focus:outline-none focus:ring-2 focus:ring-brand-orange"
            />
          </label>

          <label class="grid gap-2 text-sm font-semibold text-text-primary">
            Teléfono / WhatsApp
            <input
              type="tel"
              name="telefono_whatsapp"
              required
              placeholder="+52 55 7457 0826"
              class="w-full rounded-xl border border-border bg-surface-soft px-4 py-3.5 text-base text-text-primary placeholder:text-text-muted focus:outline-none focus:ring-2 focus:ring-brand-orange"
            />
          </label>

          <label class="grid gap-2 text-sm font-semibold text-text-primary">
            Email
            <input
              type="email"
              name="email"
              placeholder="tu@empresa.com"
              class="w-full rounded-xl border border-border bg-surface-soft px-4 py-3.5 text-base text-text-primary placeholder:text-text-muted focus:outline-none focus:ring-2 focus:ring-brand-orange"
            />
          </label>

          <label class="grid gap-2 text-sm font-semibold text-text-primary">
            Ciudad / Estado (opcional)
            <input
              type="text"
              name="ciudad_estado"
              placeholder="CDMX, Guadalajara, Monterrey..."
              class="w-full rounded-xl border border-border bg-surface-soft px-4 py-3.5 text-base text-text-primary placeholder:text-text-muted focus:outline-none focus:ring-2 focus:ring-brand-orange"
            />
          </label>

          <label class="grid gap-2 text-sm font-semibold text-text-primary">
            ¿Qué necesitas producir?
            <select
              name="tipoProyecto"
              required
              class="w-full rounded-xl border border-border bg-surface-soft px-4 py-3.5 text-base text-text-primary focus:outline-none focus:ring-2 focus:ring-brand-orange"
            >
              <option value="" disabled selected>Selecciona una opción</option>
              <option>Branding físico</option>
              <option>Expo / stands</option>
              <option>Papelería corporativa</option>
              <option>Grabado láser</option>
              <option>Impresión textil</option>
              <option>Diseño gráfico</option>
              <option>Otro</option>
            </select>
          </label>

          <label class="grid gap-2 text-sm font-semibold text-text-primary">
            Mensaje
            <textarea
              name="mensaje"
              required
              rows={4}
              placeholder="Ej: stand para expo en CDMX, entrega en 2 semanas..."
              class="w-full resize-none rounded-xl border border-border bg-surface-soft px-4 py-3.5 text-base text-text-primary placeholder:text-text-muted focus:outline-none focus:ring-2 focus:ring-brand-orange"
            ></textarea>
          </label>

          <div class="hidden" aria-hidden="true">
            <label>
              Website
              <input type="text" name="website" tabindex="-1" autocomplete="off" />
            </label>
          </div>

          <div class="mt-2 grid gap-3 sm:grid-cols-2">
            <button
              type="submit"
              data-submit-button
              class="ui-interactive inline-flex w-full items-center justify-center rounded-xl bg-brand-orange px-6 py-4 text-sm font-semibold text-white hover:bg-brand-orange-hover focus:outline-none focus:ring-2 focus:ring-brand-orange focus:ring-offset-2"
            >
              <span data-submit-label>Enviar solicitud de cotización</span>
            </button>
            <a
              href={whatsappBaseUrl}
              target="_blank"
              rel="noopener noreferrer"
              data-whatsapp-link
              class="ui-interactive inline-flex w-full items-center justify-center gap-2 rounded-xl border-2 border-accent-green bg-accent-green px-6 py-4 text-sm font-semibold text-white hover:border-[#00853a] hover:bg-[#00853a] focus:outline-none focus:ring-2 focus:ring-brand-orange focus:ring-offset-2"
            >
              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z" />
                <path d="M12.051 21.785h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884a9.86 9.86 0 019.881 9.892c-.003 5.45-4.437 9.884-9.885 9.884z" />
              </svg>
              Cotizar por WhatsApp
            </a>
          </div>

          <p class="hidden text-sm font-semibold" data-form-feedback role="status" aria-live="polite"></p>
          <p class="text-sm text-text-secondary">No compartimos tu información. Solo la usamos para cotizar tu proyecto.</p>
          <p class="text-sm text-text-secondary">Respuesta en menos de 24 hrs hábiles.</p>
        </form>
      </div>
    </div>
  </Container>
</section>

<script>
  const form = document.querySelector("[data-contact-form]");
  const whatsappLink = document.querySelector("[data-whatsapp-link]");
  const submitButton = document.querySelector("[data-submit-button]");
  const submitLabel = document.querySelector("[data-submit-label]");
  const feedback = document.querySelector("[data-form-feedback]");
  const defaultSubmitText = submitLabel?.textContent || "Enviar solicitud de cotización";
  const hubspotLeadEndpoint = "/api/hubspot/lead.json";
  const searchParams = new URLSearchParams(window.location.search);
  const prefilledMessage = searchParams.get("mensaje");
  const shouldFocusContactForm = searchParams.has("catalogo") || Boolean(prefilledMessage);

  const getFieldValue = (name) => {
    if (!form) return "";
    const field = form.querySelector(`[name="${name}"]`);
    return field?.value?.trim() ?? "";
  };

  const buildWhatsappMessage = () => {
    const nombre = getFieldValue("nombre");
    const empresa = getFieldValue("empresa");
    const mensaje = getFieldValue("mensaje");

    return `Hola, quiero cotizar un proyecto. Soy ${nombre || "un prospecto"}${empresa ? ` de ${empresa}` : ""}. ${
      mensaje || ""
    }`.trim();
  };

  const setFeedback = (type, message) => {
    if (!feedback) return;
    if (!message) {
      feedback.classList.add("hidden");
      feedback.textContent = "";
      return;
    }
    feedback.classList.remove("hidden", "text-red-600", "text-accent-green");
    feedback.classList.add(type === "error" ? "text-red-600" : "text-accent-green");
    feedback.textContent = message;
  };

  const setSubmitting = (isSubmitting) => {
    if (submitButton) {
      submitButton.disabled = isSubmitting;
      submitButton.classList.toggle("opacity-75", isSubmitting);
      submitButton.classList.toggle("cursor-not-allowed", isSubmitting);
    }
    if (submitLabel) {
      submitLabel.textContent = isSubmitting ? "Enviando..." : defaultSubmitText;
    }
  };

  const getPayload = () => {
    const tipoProyecto = getFieldValue("tipoProyecto");
    const mensaje = getFieldValue("mensaje");
    const mensajeCompleto = tipoProyecto ? `[Tipo de proyecto: ${tipoProyecto}]\n${mensaje}` : mensaje;

    return {
      nombre: getFieldValue("nombre"),
      empresa: getFieldValue("empresa"),
      telefono_whatsapp: getFieldValue("telefono_whatsapp"),
      email: getFieldValue("email"),
      ciudad_estado: getFieldValue("ciudad_estado"),
      mensaje: mensajeCompleto,
      website: getFieldValue("website"),
    };
  };

  const hydrateCatalogIntent = () => {
    if (!form) return;

    const nameField = form.querySelector('input[name="nombre"]');
    const messageField = form.querySelector('textarea[name="mensaje"]');

    if (messageField instanceof HTMLTextAreaElement && prefilledMessage && !messageField.value.trim()) {
      messageField.value = prefilledMessage;
    }

    if (!shouldFocusContactForm) return;

    window.requestAnimationFrame(() => {
      if (messageField instanceof HTMLTextAreaElement) {
        messageField.focus({ preventScroll: true });
        messageField.setSelectionRange(messageField.value.length, messageField.value.length);
        return;
      }

      if (nameField instanceof HTMLInputElement) {
        nameField.focus({ preventScroll: true });
      }
    });

    if (window.history?.replaceState) {
      const nextParams = new URLSearchParams(window.location.search);
      nextParams.delete("catalogo");
      nextParams.delete("mensaje");
      const queryString = nextParams.toString();
      const cleanedUrl = `${window.location.pathname}${queryString ? `?${queryString}` : ""}${window.location.hash || "#contacto"}`;
      window.history.replaceState({}, document.title, cleanedUrl);
    }
  };

  hydrateCatalogIntent();

  if (whatsappLink) {
    whatsappLink.addEventListener("click", () => {
      const message = buildWhatsappMessage();
      const url = `https://wa.me/525574570826?text=${encodeURIComponent(message)}`;
      whatsappLink.setAttribute("href", url);
    });
  }

  if (form) {
    form.addEventListener("submit", async (event) => {
      event.preventDefault();
      setSubmitting(true);
      setFeedback("success", "");

      try {
        const payload = getPayload();
        const response = await fetch(hubspotLeadEndpoint, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(payload),
        });

        const result = await response.json().catch(() => ({}));
        if (!response.ok || !result?.ok) {
          throw new Error(result?.error || "No se pudo enviar tu solicitud.");
        }

        setFeedback("success", "Gracias. Recibimos tu solicitud y te contactaremos pronto.");
        form.reset();
      } catch (error) {
        const message = error instanceof Error ? error.message : "No se pudo enviar tu solicitud.";
        setFeedback("error", message);
      } finally {
        setSubmitting(false);
      }
    });
  }
</script>
