---
import Container from "./Container.astro";
import SectionHeader from "./SectionHeader.astro";

const whatsappBaseUrl = import.meta.env.PUBLIC_WHATSAPP_URL ?? "https://wa.me/525574570826";
const whatsappMessage =
  "Hola Enfoque, queremos apoyo para branding físico y publicidad impresa para nuestra empresa en México.";
const whatsappUrl = `${whatsappBaseUrl}?text=${encodeURIComponent(whatsappMessage)}`;

const differentiators = [
  "Punta a punta: diseño → producción → instalación",
  "Control de calidad y acabados corporativos",
  "Coordinación e instalación con cobertura nacional",
];
---

<section id="nosotros" class="nosotros-preview section-bg section-blue-orange relative overflow-hidden" aria-labelledby="nosotros-heading">
  <div class="section-glow absolute inset-0 [--section-orange-glow:10%] [--section-green-glow:8%]" aria-hidden="true"></div>
  <div class="section-grid section-grid-soft absolute inset-0" aria-hidden="true"></div>

  <Container class="section-panel relative py-10 md:py-12">
    <div class="grid gap-6 lg:grid-cols-[1.05fr_0.95fr] lg:gap-8">
      <div>
        <SectionHeader
          id="nosotros-heading"
          label="NOSOTROS"
          titleStart="Más de 30 años de ejecución "
          accent="corporativa"
          titleEnd=" en México"
          subtitle="Equipo experto en branding físico, producción publicitaria e instalación nacional para empresas."
          align="left"
        />

        <a
          href={whatsappUrl}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Hablar por WhatsApp con Enfoque"
          class="ui-interactive mt-6 inline-flex min-h-11 w-full items-center justify-center rounded-xl bg-accent-green px-5 py-3 text-sm font-semibold text-white shadow-sm hover:bg-[#00853a] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-orange focus-visible:ring-offset-2 sm:w-auto"
        >
          Hablar por WhatsApp
        </a>
        <p class="mt-2 text-sm text-text-muted">Respondemos en menos de 24 hrs hábiles.</p>
      </div>

      <div class="space-y-4">
        <article class="ui-interactive rounded-2xl border border-border bg-surface p-5 shadow-sm">
          <h3 class="text-sm font-semibold uppercase tracking-[0.2em] text-text-secondary">Lo que nos hace diferentes</h3>
          <ul class="mt-3 space-y-2.5">
            {differentiators.map((item) => (
              <li class="flex items-start gap-2.5 text-sm leading-relaxed text-text-secondary">
                <span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-brand-orange" aria-hidden="true"></span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </article>

        <div class="grid gap-3 sm:grid-cols-2">
          <article class="ui-interactive rounded-2xl border border-border bg-surface p-4 shadow-sm">
            <h3 class="text-xs font-semibold uppercase tracking-[0.2em] text-text-secondary">Misión</h3>
            <p class="mt-2 text-sm leading-relaxed text-text-primary">
              Hacer visible a las marcas en espacios físicos con ejecución impecable.
            </p>
          </article>

          <article class="ui-interactive rounded-2xl border border-border bg-surface p-4 shadow-sm">
            <h3 class="text-xs font-semibold uppercase tracking-[0.2em] text-text-secondary">Visión</h3>
            <p class="mt-2 text-sm leading-relaxed text-text-primary">
              Ser el partner #1 de branding físico corporativo en México.
            </p>
          </article>
        </div>
      </div>
    </div>
  </Container>
</section>
