---
import Container from "./Container.astro";
import Button from "./Button.astro";

const services = [
  {
    slug: "stands",
    title: "Stands para exposiciones",
    description: "Diseño y fabricación de stands que elevan tu presencia en eventos.",
    icon: "stands",
  },
  {
    slug: "senalizacion",
    title: "Señalización corporativa",
    description: "Letreros, interiores y exteriores con acabados profesionales.",
    icon: "senalizacion",
  },
  {
    slug: "impresion-gran-formato",
    title: "Impresión gran formato",
    description: "Lonas, espectaculares y materiales impresos de alto impacto.",
    icon: "impresion",
  },
  {
    slug: "viniles-rotulacion",
    title: "Viniles y rotulación",
    description: "Aplicaciones precisas para branding en espacios y vehículos.",
    icon: "viniles",
  },
  {
    slug: "regalos-corporativos",
    title: "Regalos corporativos premium",
    description: "Artículos personalizados que fortalecen relaciones con clientes.",
    icon: "regalos",
  },
  {
    slug: "produccion-instalacion",
    title: "Producción e instalación completa",
    description: "Nos encargamos del proceso de principio a fin, sin fricciones.",
    icon: "produccion",
  },
];
---

<section id="servicios" class="bg-surface-soft py-20" aria-labelledby="servicios-heading">
  <Container>
    <header class="text-center max-w-3xl mx-auto">
      <h2 id="servicios-heading" class="text-3xl font-bold text-text-primary md:text-4xl">
        Servicios que hacen visible tu marca
      </h2>
      <p class="mt-4 text-lg text-text-secondary">
        Desde stands y señalización hasta producción e instalación completa, ejecutamos proyectos físicos con calidad premium.
      </p>
    </header>

    <ul class="mt-14 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6" role="list">
      {services.map((s) => (
        <li>
          <a
            href={`/servicios/${s.slug}`}
            class="services-card group block h-full rounded-2xl border border-border bg-surface p-6 transition-all duration-300 hover:-translate-y-1 hover:border-brand-orange hover:shadow-md focus:outline-none focus:ring-2 focus:ring-brand-orange focus:ring-offset-2"
          >
            <span class="flex h-12 w-12 items-center justify-center rounded-xl bg-surface-soft text-brand-blue transition-colors group-hover:bg-brand-orange/10 group-hover:text-brand-orange" aria-hidden="true">
              {s.icon === "stands" && (
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              )}
              {s.icon === "senalizacion" && (
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              )}
              {s.icon === "impresion" && (
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5M9 21H7a2 2 0 01-2-2v-4a2 2 0 012-2h2.5M9 3H7a2 2 0 00-2 2v4a2 2 0 012 2h2.5M9 3h6v6M9 21v-6m0 6l3-3m-3 3l-3-3" />
                </svg>
              )}
              {s.icon === "viniles" && (
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              )}
              {s.icon === "regalos" && (
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 00-2 2v6a2 2 0 002 2h14a2 2 0 002-2v-6a2 2 0 00-2-2H5z" />
                </svg>
              )}
              {s.icon === "produccion" && (
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                </svg>
              )}
            </span>
            <h3 class="mt-4 text-lg font-semibold text-text-primary">{s.title}</h3>
            <p class="mt-2 text-sm text-text-secondary">{s.description}</p>
          </a>
        </li>
      ))}
    </ul>

    <div class="mt-14 flex flex-col items-center gap-4 sm:flex-row sm:justify-start">
      <Button href="/servicios" variant="primary" size="md">
        Ver todos los servicios
      </Button>
      <Button href="/#contacto" variant="secondary" size="md">
        Cotizar proyecto
      </Button>
    </div>
  </Container>
</section>
