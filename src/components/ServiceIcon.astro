{icon === "papeleria" && (
  <svg class={className} fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
    <path d="M7 3h8l4 4v14H7zM15 3v4h4M10 12h6M10 16h6" />
  </svg>
