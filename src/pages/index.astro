---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Hero from "../components/Hero.astro";
import ServicesPreview from "../components/ServicesPreview.astro";
import Footer from "../components/Footer.astro";
import Container from "../components/Container.astro";
---

<BaseLayout
  title="Enfoque en Medios Publicitarios"
  description="Diseñamos, producimos e instalamos materiales publicitarios premium para empresas. CDMX y cobertura nacional."
>
  <Nav />

  <main>
    <Hero />
    <ServicesPreview />

    <!-- Placeholder sections (to be implemented) -->
    <section id="portafolio" class="border-t border-border py-16 md:py-20" aria-labelledby="portafolio-heading">
      <Container>
        <h2 id="portafolio-heading" class="text-center text-3xl font-bold text-text-primary md:text-4xl">
          Portafolio
        </h2>
        <p class="mx-auto mt-3 max-w-2xl text-center text-text-secondary">
          Próximamente.
        </p>
      </Container>
    </section>

    <section id="proceso" class="border-t border-border bg-surface-soft py-16 md:py-20" aria-labelledby="proceso-heading">
      <Container>
        <h2 id="proceso-heading" class="text-center text-3xl font-bold text-text-primary md:text-4xl">
          Proceso
        </h2>
        <p class="mx-auto mt-3 max-w-2xl text-center text-text-secondary">
          Próximamente.
        </p>
      </Container>
    </section>

    <section id="nosotros" class="border-t border-border py-16 md:py-20" aria-labelledby="nosotros-heading">
      <Container>
        <h2 id="nosotros-heading" class="text-center text-3xl font-bold text-text-primary md:text-4xl">
          Nosotros
        </h2>
        <p class="mx-auto mt-3 max-w-2xl text-center text-text-secondary">
          Próximamente.
        </p>
      </Container>
    </section>

    <section id="contacto" class="border-t border-border bg-surface-soft py-16 md:py-20" aria-labelledby="contacto-heading">
      <Container>
        <h2 id="contacto-heading" class="text-center text-3xl font-bold text-text-primary md:text-4xl">
          Contacto
        </h2>
        <p class="mx-auto mt-3 max-w-2xl text-center text-text-secondary">
          Próximamente.
        </p>
      </Container>
    </section>
  </main>

  <Footer />
</BaseLayout>
