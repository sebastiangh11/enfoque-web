---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import WhatsAppFloat from "../components/WhatsAppFloat.astro";

const services = [
  {
    title: "Lonas, viniles y rotulación",
    description: "Materiales resistentes para exteriores e interiores. Instalación profesional en fachadas y vehículos.",
    icon: "lona",
  },
  {
    title: "Señalización y branding corporativo",
    description: "Identidad visual coherente en espacios de trabajo, oficinas y puntos de venta.",
    icon: "señal",
  },
  {
    title: "Stands y exhibiciones",
    description: "Montaje para ferias, eventos y showrooms. Diseño y producción a medida.",
    icon: "stand",
  },
  {
    title: "Impresión gran formato",
    description: "Banners, backlights y gráficos de alta resolución para impacto visual.",
    icon: "impresion",
  },
  {
    title: "POP / display / activaciones",
    description: "Material punto de venta y soportes para campañas en tienda.",
    icon: "pop",
  },
  {
    title: "Regalos corporativos y personalizados",
    description: "Artículos promocionales con tu marca. Desde merch hasta obsequios ejecutivos.",
    icon: "regalo",
  },
];

const processSteps = [
  { label: "Brief", desc: "Entendemos tu necesidad y objetivos" },
  { label: "Diseño", desc: "Propuestas creativas y maquetas" },
  { label: "Producción", desc: "Fabricación con estándares de calidad" },
  { label: "Instalación", desc: "Montaje profesional en sitio" },
];

const whyEnfoque = [
  "Más de 30 años de experiencia en el sector.",
  "Materiales y procesos que garantizan durabilidad.",
  "Cumplimiento de tiempos y compromisos con nuestros clientes.",
  "Acompañamiento desde la idea hasta la instalación.",
];

const portfolioItems = [
  "Lonas y fachadas",
  "Señalización",
  "Stands",
  "Gran formato",
  "POP y display",
  "Branding",
  "Eventos",
  "Regalos corporativos",
];
---

<BaseLayout
  title="Enfoque en Medios Publicitarios"
  description="Diseñamos, producimos e instalamos materiales publicitarios premium para empresas. CDMX y cobertura nacional."
>
  <Nav />

  <main>
    <!-- A) Hero -->
    <section
      class="hero relative overflow-hidden px-4 py-20 md:py-28 lg:py-32"
      aria-labelledby="hero-heading"
    >
      <div class="hero-bg absolute inset-0" aria-hidden="true"></div>
      <div class="relative mx-auto max-w-6xl text-center">
        <h1
          id="hero-heading"
          class="text-4xl font-bold tracking-tight text-neutral-900 md:text-5xl lg:text-6xl"
        >
          Publicidad impresa que hace que tu marca se vea gigante.
        </h1>
        <p class="mx-auto mt-6 max-w-2xl text-lg text-neutral-600 md:text-xl">
          Diseñamos, producimos e instalamos materiales publicitarios premium para empresas.
        </p>
        <div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
          <a
            href="/#contacto"
            class="inline-flex w-full items-center justify-center rounded-lg bg-enfoque-orange px-8 py-3.5 text-base font-semibold text-white shadow-md transition-all duration-300 hover:bg-enfoque-orange/90 hover:shadow-lg sm:w-auto"
          >
            Cotizar
          </a>
          <a
            href="/#portafolio"
            class="inline-flex w-full items-center justify-center rounded-lg border-2 border-neutral-800 px-8 py-3.5 text-base font-semibold text-neutral-800 transition-all duration-300 hover:bg-neutral-800 hover:text-white sm:w-auto"
          >
            Ver portafolio
          </a>
        </div>
        <p class="mt-12 text-sm text-neutral-500">
          30+ años • Producción e instalación • CDMX y cobertura nacional
        </p>
      </div>
    </section>

    <!-- B) Services -->
    <section
      id="servicios"
      class="border-t border-neutral-100 bg-neutral-50/50 px-4 py-16 md:py-20"
      aria-labelledby="servicios-heading"
    >
      <div class="mx-auto max-w-6xl">
        <h2 id="servicios-heading" class="text-center text-3xl font-bold text-neutral-900 md:text-4xl">
          Servicios
        </h2>
        <p class="mx-auto mt-3 max-w-2xl text-center text-neutral-600">
          Soluciones integrales para tu comunicación visual y promoción de marca.
        </p>
        <ul class="mt-12 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {services.map((s) => (
            <li>
              <article
                class="service-card group h-full rounded-xl border border-neutral-200 bg-white p-6 shadow-sm transition-all duration-300 hover:-translate-y-1 hover:border-enfoque-orange hover:shadow-md"
              >
                <div
                  class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-enfoque-indigo/10 text-enfoque-indigo transition-colors group-hover:bg-enfoque-orange/10 group-hover:text-enfoque-orange"
                  aria-hidden="true"
                >
                  {s.icon === "lona" && (
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  )}
                  {s.icon === "señal" && (
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  )}
                  {s.icon === "stand" && (
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                  )}
                  {s.icon === "impresion" && (
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5M9 21H7a2 2 0 01-2-2v-4a2 2 0 012-2h2.5M9 3H7a2 2 0 00-2 2v4a2 2 0 012 2h2.5M9 3h6v6M9 21v-6m0 6l3-3m-3 3l-3-3" />
                    </svg>
                  )}
                  {s.icon === "pop" && (
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
                    </svg>
                  )}
                  {s.icon === "regalo" && (
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 00-2 2v6a2 2 0 002 2h14a2 2 0 002-2v-6a2 2 0 00-2-2H5z" />
                    </svg>
                  )}
                </div>
                <h3 class="text-lg font-semibold text-neutral-900">{s.title}</h3>
                <p class="mt-2 text-sm text-neutral-600">{s.description}</p>
              </article>
            </li>
          ))}
        </ul>
      </div>
    </section>

    <!-- C) Portfolio -->
    <section
      id="portafolio"
      class="border-t border-neutral-100 px-4 py-16 md:py-20"
      aria-labelledby="portafolio-heading"
    >
      <div class="mx-auto max-w-6xl">
        <h2 id="portafolio-heading" class="text-center text-3xl font-bold text-neutral-900 md:text-4xl">
          Portafolio
        </h2>
        <p class="mx-auto mt-3 max-w-2xl text-center text-neutral-600">
          Algunos de nuestros proyectos recientes.
        </p>
        <ul class="mt-12 grid grid-cols-2 gap-4 md:grid-cols-4 md:gap-6">
          {portfolioItems.map((label) => (
            <li>
              <div
                class="portfolio-tile group aspect-[4/3] overflow-hidden rounded-lg bg-gradient-to-br from-enfoque-indigo/20 to-enfoque-orange/10 transition-transform duration-300 hover:scale-[1.03]"
              >
                <div class="flex h-full items-end p-4">
                  <span class="text-sm font-medium text-neutral-700 transition-colors group-hover:text-neutral-900">
                    {label}
                  </span>
                </div>
              </div>
            </li>
          ))}
        </ul>
        <div class="mt-10 text-center">
          <a
            href="#"
            class="inline-flex items-center rounded-lg border-2 border-neutral-300 px-6 py-2.5 text-sm font-semibold text-neutral-700 transition-colors hover:border-enfoque-orange hover:text-enfoque-orange"
          >
            Ver más trabajos
          </a>
        </div>
      </div>
    </section>

    <!-- D) Process -->
    <section
      id="proceso"
      class="border-t border-neutral-100 bg-neutral-50/50 px-4 py-16 md:py-20"
      aria-labelledby="proceso-heading"
    >
      <div class="mx-auto max-w-6xl">
        <h2 id="proceso-heading" class="text-center text-3xl font-bold text-neutral-900 md:text-4xl">
          Proceso
        </h2>
        <p class="mx-auto mt-3 max-w-2xl text-center text-neutral-600">
          De la idea a la instalación, con orden y claridad.
        </p>
        <ol class="process-timeline mx-auto mt-12 max-w-3xl" role="list">
          {processSteps.map((step, i) => (
            <li class="process-step flex gap-4 md:gap-6" data-step={i + 1}>
              <div
                class="flex shrink-0 flex-col items-center"
                aria-hidden="true"
              >
                <span
                  class="flex h-10 w-10 items-center justify-center rounded-full border-2 border-enfoque-indigo bg-white text-sm font-bold text-enfoque-indigo"
                >
                  {i + 1}
                </span>
                {i < processSteps.length - 1 && (
                  <span class="mt-1 h-12 w-0.5 bg-neutral-200 md:h-16" />
                )}
              </div>
              <div class="pb-10 md:pb-12">
                <h3 class="text-lg font-semibold text-neutral-900">{step.label}</h3>
                <p class="mt-1 text-sm text-neutral-600">{step.desc}</p>
              </div>
            </li>
          ))}
        </ol>
      </div>
    </section>

    <!-- E) Trust -->
    <section
      id="por-que-enfoque"
      class="border-t border-neutral-100 px-4 py-16 md:py-20"
      aria-labelledby="trust-heading"
    >
      <div class="mx-auto max-w-6xl">
        <h2 id="trust-heading" class="text-center text-3xl font-bold text-neutral-900 md:text-4xl">
          Por qué Enfoque
        </h2>
        <p class="mx-auto mt-3 max-w-2xl text-center text-neutral-600">
          Confianza, calidad y resultados desde hace décadas.
        </p>
        <ul class="mx-auto mt-10 max-w-2xl space-y-4" role="list">
          {whyEnfoque.map((item) => (
            <li class="flex items-start gap-3">
              <span
                class="mt-1.5 h-2 w-2 shrink-0 rounded-full bg-enfoque-green"
                aria-hidden="true"
              />
              <span class="text-neutral-700">{item}</span>
            </li>
          ))}
        </ul>
        <p class="mt-10 text-center text-sm font-medium text-neutral-500">
          Clientes que confían en nosotros
        </p>
        <div class="mt-6 flex flex-wrap items-center justify-center gap-4" aria-hidden="true">
          {[1, 2, 3, 4, 5].map((n) => (
            <div
              class="h-12 w-24 rounded-full bg-neutral-200 md:w-28"
              role="presentation"
            />
          ))}
        </div>
      </div>
    </section>

    <!-- F) Contact -->
    <section
      id="contacto"
      class="border-t border-neutral-100 bg-neutral-50/50 px-4 py-16 md:py-20"
      aria-labelledby="contacto-heading"
    >
      <div class="mx-auto max-w-6xl">
        <h2 id="contacto-heading" class="text-center text-3xl font-bold text-neutral-900 md:text-4xl">
          Hablemos
        </h2>
        <p class="mx-auto mt-3 max-w-2xl text-center text-neutral-600">
          Cuéntanos tu proyecto y te respondemos a la brevedad.
        </p>

        <div class="mt-12 grid gap-10 lg:grid-cols-2 lg:gap-16">
          <form
            class="contact-form rounded-xl border border-neutral-200 bg-white p-6 shadow-sm md:p-8"
            action="#"
            method="post"
            aria-label="Formulario de contacto"
          >
            <div class="space-y-4">
              <div>
                <label for="nombre" class="block text-sm font-medium text-neutral-700">
                  Nombre
                </label>
                <input
                  id="nombre"
                  type="text"
                  name="nombre"
                  class="mt-1 block w-full rounded-lg border border-neutral-300 px-4 py-2.5 text-neutral-900 placeholder-neutral-400 focus:border-enfoque-orange focus:outline-none focus:ring-1 focus:ring-enfoque-orange"
                  placeholder="Tu nombre"
                  autocomplete="name"
                />
              </div>
              <div>
                <label for="empresa" class="block text-sm font-medium text-neutral-700">
                  Empresa
                </label>
                <input
                  id="empresa"
                  type="text"
                  name="empresa"
                  class="mt-1 block w-full rounded-lg border border-neutral-300 px-4 py-2.5 text-neutral-900 placeholder-neutral-400 focus:border-enfoque-orange focus:outline-none focus:ring-1 focus:ring-enfoque-orange"
                  placeholder="Nombre de la empresa"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-neutral-700">
                  Email
                </label>
                <input
                  id="email"
                  type="email"
                  name="email"
                  class="mt-1 block w-full rounded-lg border border-neutral-300 px-4 py-2.5 text-neutral-900 placeholder-neutral-400 focus:border-enfoque-orange focus:outline-none focus:ring-1 focus:ring-enfoque-orange"
                  placeholder="correo@empresa.com"
                  autocomplete="email"
                />
              </div>
              <div>
                <label for="mensaje" class="block text-sm font-medium text-neutral-700">
                  Mensaje
                </label>
                <textarea
                  id="mensaje"
                  name="mensaje"
                  rows="4"
                  class="mt-1 block w-full rounded-lg border border-neutral-300 px-4 py-2.5 text-neutral-900 placeholder-neutral-400 focus:border-enfoque-orange focus:outline-none focus:ring-1 focus:ring-enfoque-orange"
                  placeholder="Describe tu proyecto o necesidad..."
                />
              </div>
            </div>
            <button
              type="submit"
              class="mt-6 w-full rounded-lg bg-enfoque-orange px-6 py-3 font-semibold text-white transition-colors hover:bg-enfoque-orange/90 sm:w-auto"
            >
              Enviar mensaje
            </button>
          </form>

          <div class="flex flex-col justify-center rounded-xl border border-neutral-200 bg-white p-6 shadow-sm md:p-8">
            <p class="text-neutral-700">
              También puedes escribirnos por WhatsApp. Respondemos en menos de 24 hrs.
            </p>
            <a
              href="https://wa.me/XXXXXXXXXXX"
              target="_blank"
              rel="noopener noreferrer"
              class="mt-4 inline-flex items-center justify-center gap-2 rounded-lg bg-enfoque-green px-6 py-3 font-semibold text-white transition-colors hover:bg-enfoque-green/90"
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
              </svg>
              Abrir WhatsApp
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <WhatsAppFloat />
</BaseLayout>

<style>
  /* Hero background: gradient + subtle grid */
  .hero-bg {
    background:
      linear-gradient(135deg, rgb(46 42 120 / 0.06) 0%, transparent 50%),
      linear-gradient(225deg, rgb(242 133 0 / 0.04) 0%, transparent 40%),
      linear-gradient(
        90deg,
        rgb(0 0 0 / 0.02) 1px,
        transparent 1px
      ),
      linear-gradient(rgb(0 0 0 / 0.02) 1px, transparent 1px);
    background-size: 100% 100%, 100% 100%, 48px 48px, 48px 48px;
    background-position: 0 0, 0 0, 0 0, 0 0;
  }

  /* Portfolio tile hover zoom is done with Tailwind hover:scale */
  /* Service card hover is Tailwind */
</style>
