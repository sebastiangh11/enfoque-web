---
import BaseLayout from "../../layouts/BaseLayout.astro";

import Nav from "../../components/Nav.astro";
import Footer from "../../components/Footer.astro";
import Container from "../../components/Container.astro";
import Button from "../../components/Button.astro";
import ServiceIcon from "../../components/ServiceIcon.astro";
import { services } from "../../data/services";

const whatsappUrl = `https://wa.me/525574570826?text=${encodeURIComponent(
  "Hola, me interesa cotizar un proyecto. ¿Me compartes opciones y tiempos?"
)}`;
---

<BaseLayout
  title="Servicios | Enfoque en Medios Publicitarios"
  description="Servicios de branding físico, stands, papelería, grabado láser, impresión textil y diseño aplicado para empresas en México."
>
  <Nav />

  <main>
    <section class="relative border-t border-border py-16 md:py-20" aria-labelledby="servicios-page-heading">
      <div
        class="pointer-events-none absolute inset-0 opacity-90 [background:radial-gradient(circle_at_12%_10%,color-mix(in_srgb,var(--brand-blue)_10%,transparent),transparent_44%),radial-gradient(circle_at_85%_16%,color-mix(in_srgb,var(--brand-orange)_10%,transparent),transparent_42%),radial-gradient(circle_at_65%_84%,color-mix(in_srgb,var(--accent-green)_8%,transparent),transparent_48%)]"
        aria-hidden="true"
      ></div>

      <Container class="relative">
        <header class="mx-auto max-w-3xl text-center">
          <p class="text-xs font-semibold uppercase tracking-[0.32em] text-brand-blue">SERVICIOS</p>
          <h1 id="servicios-page-heading" class="mt-3 text-3xl font-bold tracking-tight text-text-primary md:text-5xl">
            Servicios que hacen visible tu marca
          </h1>
          <p class="mt-4 text-base leading-relaxed text-text-secondary md:text-lg">
            Resolvemos proyectos complejos sin fricción para corporativos, medianas empresas, PYMEs y retail en México.
            Producción premium, procesos claros y adaptación real a cada reto.
          </p>

          <div class="mt-6 inline-flex items-center rounded-full border border-border bg-surface-soft px-4 py-2 text-sm font-medium text-text-secondary shadow-sm">
            En construcción
          </div>
        </header>

        <ul class="mt-14 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3" role="list">
          {services.map((service) => (
            <li>
              <a
                href={`/servicios/${service.slug}`}
                class:list={[
                  "group relative isolate block h-full overflow-hidden rounded-2xl border bg-surface p-7 shadow-sm transition-all duration-500 ease-out focus:outline-none focus:ring-2 focus:ring-brand-orange focus:ring-offset-2",
                  "hover:-translate-y-0.5 hover:shadow-xl",
                  service.accent === "orange"
                    ? "border-border hover:border-brand-orange/45"
                    : "border-border hover:border-accent-green/45",
                ]}
                aria-label={`Ver detalle de ${service.name}`}
              >
                <div
                  class:list={[
                    "pointer-events-none absolute inset-0 z-0 opacity-0 transition-opacity duration-500 ease-out group-hover:opacity-100",
                    service.accent === "orange"
                      ? "bg-[radial-gradient(circle_at_14%_14%,color-mix(in_srgb,var(--brand-orange)_14%,transparent),transparent_44%),radial-gradient(circle_at_86%_88%,color-mix(in_srgb,var(--brand-blue)_12%,transparent),transparent_45%),linear-gradient(135deg,color-mix(in_srgb,var(--brand-orange)_7%,white),white_58%)]"
                      : "bg-[radial-gradient(circle_at_14%_14%,color-mix(in_srgb,var(--accent-green)_15%,transparent),transparent_44%),radial-gradient(circle_at_86%_88%,color-mix(in_srgb,var(--brand-blue)_10%,transparent),transparent_45%),linear-gradient(135deg,color-mix(in_srgb,var(--accent-green)_7%,white),white_58%)]",
                  ]}
                  aria-hidden="true"
                ></div>
                <div class="pointer-events-none absolute inset-0 z-0 bg-gradient-to-b from-white/95 to-white/98" aria-hidden="true"></div>

                <div
                  class:list={[
                    "relative z-10 flex h-12 w-12 items-center justify-center rounded-2xl border bg-surface-soft text-brand-blue transition-all duration-300",
                    service.accent === "orange"
                      ? "border-brand-orange/15 group-hover:border-brand-orange/30 group-hover:bg-brand-orange/10 group-hover:text-brand-orange group-hover:ring-4 group-hover:ring-brand-orange/10"
                      : "border-accent-green/20 group-hover:border-accent-green/35 group-hover:bg-accent-green/10 group-hover:text-accent-green group-hover:ring-4 group-hover:ring-accent-green/10",
                  ]}
                  aria-hidden="true"
                >
                  <ServiceIcon icon={service.icon} />
                </div>

                <h2 class="relative z-10 mt-5 text-lg font-semibold leading-tight text-text-primary">{service.name}</h2>
                <p class="relative z-10 mt-3 text-sm leading-relaxed text-text-secondary">
                  {service.shortDescription}
                </p>

                <span class="relative z-10 mt-6 inline-flex items-center text-sm font-semibold text-text-secondary transition-colors group-hover:text-brand-blue">
                  Ver detalle
                  <span class="ml-1" aria-hidden="true">→</span>
                </span>
              </a>
            </li>
          ))}
        </ul>

        <section class="mt-12 rounded-2xl border border-border bg-surface p-5 shadow-sm md:p-6" aria-label="Cómo trabajamos">
          <div class="grid gap-4 text-center md:grid-cols-3 md:text-left">
            <article class="rounded-xl bg-surface-soft px-4 py-4">
              <h3 class="text-sm font-semibold uppercase tracking-[0.16em] text-brand-blue">Claridad</h3>
              <p class="mt-2 text-sm text-text-secondary">Alcance, tiempos y entregables definidos desde el inicio.</p>
            </article>
            <article class="rounded-xl bg-surface-soft px-4 py-4">
              <h3 class="text-sm font-semibold uppercase tracking-[0.16em] text-brand-blue">Rapidez</h3>
              <p class="mt-2 text-sm text-text-secondary">Flujo ágil de aprobación para avanzar sin fricciones.</p>
            </article>
            <article class="rounded-xl bg-surface-soft px-4 py-4">
              <h3 class="text-sm font-semibold uppercase tracking-[0.16em] text-brand-blue">Calidad</h3>
              <p class="mt-2 text-sm text-text-secondary">Producción premium con consistencia en cada lote y pieza.</p>
            </article>
          </div>
        </section>

        <div class="mt-14 flex flex-col items-stretch justify-center gap-4 sm:flex-row sm:items-center">
          <Button href="/#contacto" variant="primary" size="md" class="w-full sm:w-auto">
            Cotizar proyecto
          </Button>
          <Button
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            variant="ghost"
            size="md"
            class="w-full border-2 !border-accent-green !bg-accent-green !text-white hover:!border-accent-green hover:!bg-accent-green/90 hover:!text-white sm:w-auto"
          >
            <svg class="mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z" />
              <path d="M12.051 21.785h-.004a9.87 9.87 0 0 1-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 0 1-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884a9.86 9.86 0 0 1 9.881 9.892c-.003 5.45-4.437 9.884-9.885 9.884z" />
            </svg>
            WhatsApp
          </Button>
        </div>

        <div class="mt-5 text-center">
          <a
            href="/#portafolio"
            class="inline-flex items-center text-sm font-semibold text-text-secondary transition-colors hover:text-brand-blue focus:outline-none focus:ring-2 focus:ring-brand-orange focus:ring-offset-2"
          >
            Ver portafolio completo
            <span class="ml-1" aria-hidden="true">→</span>
          </a>
        </div>
      </Container>
    </section>
  </main>

  <Footer />
</BaseLayout>
