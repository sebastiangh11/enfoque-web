---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Container from "../components/Container.astro";
import ContactPreview from "../components/ContactPreview.astro";
---

<BaseLayout
  title="Cotiza tu proyecto por WhatsApp | Enfoque"
  description="Contáctanos en CDMX para proyectos de publicidad impresa, stands y branding físico con cobertura nacional."
  pathname="/contacto"
>
  <Nav />

  <main>
    <section class="section-bg section-shell" aria-labelledby="contacto-page-heading">
      <Container class="section-panel relative py-10 md:py-12">
        <header class="mx-auto max-w-3xl text-center">
          <p class="text-xs font-semibold uppercase tracking-[0.32em] text-brand-blue">CONTACTO</p>
          <h1 id="contacto-page-heading" class="mt-3 text-3xl font-bold tracking-tight text-text-primary md:text-5xl">
            Cotiza tu proyecto por WhatsApp
          </h1>
          <p class="mt-4 text-base leading-relaxed text-text-secondary md:text-lg">
            Escríbenos para proyectos de branding físico y publicidad impresa con cobertura nacional desde CDMX.
          </p>
        </header>
      </Container>
    </section>

    <ContactPreview />
  </main>
</BaseLayout>
