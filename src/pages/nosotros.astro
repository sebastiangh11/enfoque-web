---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Container from "../components/Container.astro";
import Nosotros from "../components/Nosotros.astro";
---

<BaseLayout
  title="Más de 30 años ejecutando publicidad corporativa | Enfoque"
  description="Empresa familiar mexicana especializada en producción e instalación de branding físico para marcas B2B."
  pathname="/nosotros"
>
  <Nav />

  <main>
    <section class="section-bg section-shell" aria-labelledby="nosotros-page-heading">
      <Container class="section-panel relative py-10 md:py-12">
        <header class="mx-auto max-w-3xl text-center">
          <p class="text-xs font-semibold uppercase tracking-[0.32em] text-brand-blue">NOSOTROS</p>
          <h1 id="nosotros-page-heading" class="mt-3 text-3xl font-bold tracking-tight text-text-primary md:text-5xl">
            Más de 30 años ejecutando publicidad corporativa
          </h1>
          <p class="mt-4 text-base leading-relaxed text-text-secondary md:text-lg">
            Empresa familiar mexicana enfocada en branding físico, producción publicitaria e instalación nacional para empresas.
          </p>
        </header>
      </Container>
    </section>

    <Nosotros />
  </main>
</BaseLayout>
