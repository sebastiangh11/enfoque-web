---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Container from "../components/Container.astro";
---

<BaseLayout
  title="Aviso de privacidad | Enfoque en Medios Publicitarios"
  description="Aviso de privacidad de Enfoque en Medios Publicitarios."
  pathname="/aviso-de-privacidad"
>
  <Nav />

  <main>
    <section class="section-bg section-shell" aria-labelledby="aviso-heading">
      <Container class="section-panel relative py-10 md:py-12">
        <div class="surface-card mx-auto max-w-3xl p-6 md:p-8">
          <p class="text-xs font-semibold uppercase tracking-[0.28em] text-brand-blue">Legal</p>
          <h1 id="aviso-heading" class="mt-3 text-3xl font-bold tracking-tight text-text-primary md:text-4xl">
            Aviso de privacidad
          </h1>
          <p class="mt-4 text-base leading-relaxed text-text-secondary">En construcción.</p>
          <p class="mt-3 text-sm text-text-secondary">
            Estamos preparando esta sección. Si necesitas información legal, escríbenos a
            <a
              href="mailto:ventas@segac.com.mx"
              class="focus-ring ml-1 font-semibold text-brand-blue transition-colors hover:text-brand-blue-hover"
            >
              ventas@segac.com.mx
            </a>.
          </p>
        </div>
      </Container>
    </section>
  </main>
</BaseLayout>
